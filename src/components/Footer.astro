<style lang="scss" is:global>

    .fab-footer {

        display: grid;
        gap: var(--global-gap);
        grid-template-areas: "list list list list"
                             "line line line line"
                             "cop net . leg";

        & ul {
            display: flex;
            align-items: center;
            gap: .5em 1em;
            justify-content: space-between;
        }

        & a {
            text-decoration: none;
        }
    }

    .fab-footer-menu { grid-area: list;}
    .fab-footer hr { grid-area: line;}
    .fab-copyright { grid-area: cop;}
    .fab-social-networks { grid-area: net;}
    .fab-legacy-content {grid-area: leg;}

    .fab-footer-menu {
        flex-wrap: wrap;
    }

    .fab-copyright {
        margin: 0 1.5em 0 0;
    }

    .fab-social-networks {
        gap: 1.5rem;
    }

</style>