---
import Icon from "./Icon.astro";
import Mark from "./Mark.astro";
---

<ul class="fab-breadcrumbs">
    <li><a href="/"><Icon id="home" width="16" height="16" /></a></li>
    <Mark width="4px" height="19px" color="var(--color-gray-2)" />
    <li><a href="">Подарочкая упаковка</a></li>
    <Mark width="4px" height="19px" color="var(--color-gray-2)" />
    <li class="active">Крышка-дно</li>
</ul>

<style lang="scss" is:global>
    .fab-breadcrumbs {
        display: flex;
        align-items: center;
        column-gap: 1rem;
        & a {
            display: flex;
            align-items: center;
        }
            
        & li {
            color: var(--color-gray-4);
            font-weight: 500;
            &:not(:first-child) {
                // padding: 0 0 0 1em;
                // margin: 0 0 0 1em;
                // border-left: 2px solid var(--color-gray-4);
            }
            &.active {
                    color: var(--color-gray-3);
                    text-decoration: none;
                }
        }
    }
</style>