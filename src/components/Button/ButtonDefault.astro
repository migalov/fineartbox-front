---
const {tag,  href, idButton, reverse, sizeLabel, color} = Astro.props
---

{
    tag == "a" && <a class:list={[`fab-button`, color == "violet" && `fab-button--violet`]} style={sizeLabel && `--font-size: ${sizeLabel};` + `dd`} href={href} data-reverse={reverse} id={idButton}>
        <slot />
    </a>
}
{
    tag == "button" &&
        <button class:list={[`fab-button`, color == "violet" && `fab-button--violet`]} style={sizeLabel && `--font-size: ${sizeLabel}`} data-reverse={reverse} id={idButton}>
            <slot />
        </button>
}

<style lang="scss" is:global>
    .fab-button {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.25rem;
        padding: .5em;
        background-color: var(--color-orange);
        color: var(--color-white);
        font-family: var(--font-family);
        font-weight: 500;
        outline: 1px solid transparent;
        border: none;
        &:hover {
            background-color: var(--color-white);
            color: var(--color-orange);
            outline: 1px solid var(--color-orange);
            text-decoration: none;
        }
        &[data-reverse="true"] {
            background-color: var(--color-white);
            color: var(--color-orange);
            outline: 1px solid var(--color-orange);
            &:hover {
                background-color: var(--color-orange);
                color: var(--color-white);
            }
        }
        &.fab-button--violet {
            background-color: var(--color-violet-1);
            &:hover {
                outline: 1px solid var(--color-violet-1);
                background-color: var(--color-white);
                color: var(--color-violet-1);
            }
        }

    }
</style>