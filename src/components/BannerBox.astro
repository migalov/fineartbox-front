---
const {desktopColumns, backgroundDefault, title} = Astro.props;
---

<div class="fab-box-banner fab-box-banner--no-image" style={`
    --background-color: var(--color-orange);
    --background-default: url('${backgroundDefault}');
    --background-hover: url('/img/Announce-Box-hover.jpg');
    --desktop-columns: ${desktopColumns};
`}>
    <h3>{title}</h3>
    <p>Текстовое описание</p>
</div>

<style lang="scss">
    .fab-box-banner {
        background-color: var(--background-color);
        background-image: var(--background-default);
        background-repeat: no-repeat;
        background-size: cover;
        width: 100%;
        min-height: 14.5rem;
        transition: ease .5s;
        grid-area: auto / span var(--desktop-columns);
        padding: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        color: var(--color-white);
        &:hover {
            background: var(--background-hover);
            background-repeat: no-repeat;
            background-size: cover;

            & p {
                display: block;
                opacity: 1;
                max-height: 100%;
            }
        }

        & p {
            transition: ease .5s;
            // display: none;
            max-height: 0;
            opacity: 0;
        }
        &.fab-box-banner--no-image {
            clip-path: polygon(100% 0, 100% 80%, 80% 100%, 0 100%, 0 0);
        }
    }
</style>