---
import Icon from "./Icon.astro";
const {idIcon, title, desc, label, href} = Astro.props;
---

<div class="fab-download-doc">
    <Icon id={idIcon} width="100" height="72" />
    <h3>{title}</h3>
    <slot />
    <a href={href}><Icon id="arrow-download" width="16" height="16" />{label}</a>
</div>

<style lang="scss" is:global>
    .fab-download-doc {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        & h3 {
            font-family: var(--font-family);
            font-size: 1rem;
        }
        & > a {
            display: flex;
            align-items: center;
            gap: 1rem;
            font-family: var(--font-family);
            font-size: 1rem;
            font-weight: 500;
            // color: var(--color-black);
            &:hover {
                opacity: .5;
            }
        }
        & ul {
            list-style-type: none;
            padding: 0;
            display: flex;
            flex-direction: column;
            row-gap: .5em;
            & li {
                display: flex;
                column-gap: .4em;
                & span {
                    width: 8em;
                    font-weight: 400;
                }
                & strong {
                    flex: 1;
                    font-weight: 500;
                }
            }
        }

    }
</style>