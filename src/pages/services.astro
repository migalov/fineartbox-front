    <style lang="scss" is:global> 
    .fab-design-packages {
        --padding-section: clamp(1.25rem, 0.8099rem + 1.8779vw, 2.5rem);
        display: flex;
        flex-direction: column;
        gap: 2rem;
        background-color: var(--color-orange);
        color: var(--color-white);

        @media (min-width: 992px) {
            flex-direction: row;
        }

        & h4 {
            font-size: 1rem;
            font-family: var(--font-family);
            margin: 0 0 .5em 0;
        }

    }

    .fab-design-packages-left {
        display: flex;
        flex-direction: column;
        row-gap: var(--padding-section);
        padding: var(--padding-section) var(--padding-section) 0 var(--padding-section);
        @media (min-width: 768px) {
            padding: var(--padding-section);
        }
    }

    .fab-design-packages-left, .fab-design-packages-right {

    }

    .fab-design-packages__line {
        width: 100%;
        height: 1px;
        background: var(--color-white);
        margin: 0;
        @media (min-width: 992px) {
            width: 1px;
            height: calc(100% - 5rem);
            margin: var(--padding-section) 0;
        }
    }
    .fab-design-packages-right {
        padding: 0 var(--padding-section) var(--padding-section) var(--padding-section);
        @media (min-width: 768px) {
            padding: var(--padding-section);
        }
    }

    .fab-design-hint-button {
        position: relative;
        display: flex;
        align-items: center;
        gap: 1rem;
        font-weight: 500;
        cursor: pointer;
        & input:checked ~ .fab-design-hint-window {
            opacity: 1;
            pointer-events: all;
        } 
    }
    .fab-design-hint-window {
        display: flex;
        flex-direction: column;
        gap: .5em;
        position: absolute;
        bottom: 2rem;
        background-color: var(--color-white);
        color: var(--color-black);
        padding: 1rem;
        box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.25);
        pointer-events: none;
        opacity: 0;
        transition: var(--transition-default);
        cursor: default;
    }

    .fab-design-price-list {
        display: flex;
        gap: 1rem;
    }

    .fab-design-price-list-block {
        padding: 1rem;
        background-color: var(--color-gray-1);
        & h3 {
            font-size: 1rem;
        }
        @media (max-width: 991.99px) {
            min-width: clamp(13.5rem, 11.3571rem + 5.7143vw, 16.5rem);
            width: clamp(13.5rem, 11.3571rem + 5.7143vw, 16.5rem);
        }
    }



