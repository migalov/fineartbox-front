                <path d="M13.6603 2.34662C10.538 -0.779486 5.47277 -0.782594 2.34663 2.33963C-0.779477 5.46194 -0.782623 10.5272 2.33968 13.6534C5.46191 16.7795 10.5273 16.7826 13.6534 13.6603C16.7795 10.5381 16.7826 5.47272 13.6603 2.34662ZM9.117 13.0764C9.117 13.1998 9.01697 13.2998 8.89361 13.2998H7.10643C6.98306 13.2998 6.88303 13.1998 6.88303 13.0764V6.44194C6.88303 6.3185 6.98306 6.21854 7.10643 6.21854H8.89361C9.01697 6.21854 9.117 6.31846 9.117 6.44194V13.0764ZM8.00002 5.29142C7.28562 5.29142 6.70437 4.71025 6.70437 3.99581C6.70437 3.28146 7.28558 2.70017 8.00002 2.70017C8.71445 2.70017 9.29566 3.28142 9.29566 3.99581C9.29566 4.71025 8.71438 5.29142 8.00002 5.29142Z" fill="#F15A2A"/>
