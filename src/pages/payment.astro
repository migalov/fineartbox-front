<style lang="scss">
    .fab-custom-grid {
        display: grid;
        gap: var(--global-gap);
        @media (min-width: 768px) {
            grid-template-columns: var(--grid-template-columns);
        }

    }
    .fab-contacts-block {
        display: flex;
        flex-direction: column;
        row-gap: 1em;
